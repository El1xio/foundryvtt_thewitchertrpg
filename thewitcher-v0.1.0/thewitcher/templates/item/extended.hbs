<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header loot-header">
        <img class="profile" src="{{item.img}}" data-edit="img" alt="{{item.name}}"/>

        <div class="header-details flexrow">
            <h1 class="charname">
                <input name="name" type="text" value="{{item.name}}"
                       placeholder="{{ localize 'THEWITCHER.item_sheet.name' }}"/>
            </h1>

            <div class="item-subtitle">
                <h4 class="item-type">{{itemType}}</h4>
                <span class="item-status">{{itemStatus}}</span>
            </div>
        </div>
    </header>

    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="description">Description</a>
        <a class="item" data-tab="details">Details</a>
        {{#if isContainer}}<a class="item" data-tab="items">Items</a>{{/if}}
    </nav>

    <section class="sheet-body">
        <div class="tab description flexrow" data-group="primary" data-tab="description">
            {{> "systems/thewitcher/templates/item/parts/description.hbs" }}
        </div>

        <div class="tab details flexcol" data-group="primary" data-tab="details">
            <h3 class="form-header">{{ localize  "THEWITCHER.item_sheet.item_detail" }}</h3>

            {{#if isContainer}}
            {{!- Capacity -}}
                <div class="form-group">
                    <label for="item-capacity">{{ localize "THEWITCHER.item.capacity" }}</label>
                    <input type="number" id="item-capacity" name="data.capacity" value="{{data.capacity}}"
                           data-dtype="Number"/>
                </div>

                {{!- Container Filters -}}
                <div class="form-group">
                    <label>{{ localize "THEWITCHER.item.container_allowed" }}</label>
                    <div class="form-fields stacked">
                        <input type="text" id="item-allowed-concealment" name="data.allowed.concealment"
                               value="{{data.allowed.concealment}}"/>
                        <input type="text" id="item-allowed-concealment" name="data.allowed.item-types"
                               value="{{data.allowed.item-types}}"/>
                    </div>
                </div>
            {{/if}}
        </div>

        {{#if isContainer}}
            <div class="tab items" data-group="primary" data-tab="items">
            </div>
        {{/if}}
    </section>
</form>
